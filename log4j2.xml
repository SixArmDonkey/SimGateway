<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="trace">
  <Properties>
    <Property name="basePath">.</Property>
    <Property name="fileName">dcsbridge</Property>
  </Properties>

  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} {%t} %-5p %c %x - %m%n" />
    </Console>

		<RollingFile name="fileLogger"
			fileName="${basePath}/${fileName}.log"
      filePattern="${basePath}/${fileName}.%d{dd-MMM}.log.gz">
			<PatternLayout>
				<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
				<SizeBasedTriggeringPolicy size="100MB" />
			</Policies>
			<!-- Max 10 files will be created everyday -->
			<DefaultRolloverStrategy max="10">
				<Delete basePath="${basePath}" maxDepth="10">
          <IfFileName glob="${fileName}.*.log" />
					<!-- Delete all files older than 7 days -->
					<IfLastModified age="7d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
  </Appenders>

  <Loggers>
    <Root level="trace" additivity="false">
      <AppenderRef ref="console" /> 
      <AppenderRef ref="fileLogger" />
    </Root>
  </Loggers>
</Configuration>
